<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/d4TextView5" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="284dp"
            android:layout_marginStart="284dp" app:layout_constraintBottom_toTopOf="@+id/DiceYouAreRollingSeekBar"
            android:layout_marginBottom="16dp" android:text="@string/d12"
    />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/d4TextView4" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="352dp"
            android:layout_marginStart="352dp" app:layout_constraintBottom_toTopOf="@+id/DiceYouAreRollingSeekBar"
            android:layout_marginBottom="16dp" android:text="@string/d20"
    />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/d4TextView3" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="216dp"
            android:layout_marginStart="216dp" app:layout_constraintBottom_toTopOf="@+id/DiceYouAreRollingSeekBar"
            android:layout_marginBottom="16dp" android:text="@string/d10"
    />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/d4TextView" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="152dp"
            android:layout_marginStart="152dp" app:layout_constraintBottom_toTopOf="@+id/DiceYouAreRollingSeekBar"
            android:layout_marginBottom="16dp" android:text="@string/d8"
    />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/d4TextView2" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="84dp"
            android:layout_marginStart="84dp" app:layout_constraintBottom_toTopOf="@+id/DiceYouAreRollingSeekBar"
            android:layout_marginBottom="16dp" android:text="@string/d6" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/divider2" app:layout_constraintVertical_bias="0.0"/>
    <TextView
            android:text="@string/number_of_rolls"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/NumberOfRollsTextView"
            app:layout_constraintBottom_toTopOf="@+id/NumberOfRollsSeekBar" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="24dp" android:layout_marginStart="24dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/D4TextView" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" app:layout_constraintBottom_toTopOf="@+id/DiceYouAreRollingSeekBar"
            android:layout_marginBottom="16dp" android:text="@string/D4"/>
    <SeekBar
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:max="5"
            android:progress="5"
            android:id="@+id/DiceYouAreRollingSeekBar"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginBottom="32dp" app:layout_constraintBottom_toTopOf="@+id/NumberOfRollsSeekBar"/>
    <SeekBar
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:max="1"
            android:progress="0"
            android:id="@+id/NumberOfRollsSeekBar"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:layout_marginBottom="32dp"
            app:layout_constraintBottom_toTopOf="@+id/RollButton" android:indeterminate="false"/>
    <Button
            android:text="@string/roll"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/RollButton" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="64dp"
            android:layout_marginRight="64dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="64dp" android:layout_marginStart="64dp"
            android:layout_marginBottom="24dp" app:layout_constraintBottom_toBottomOf="parent"/>
    <View
            android:id="@+id/divider2"
            android:layout_width="377dp"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/D4TextView"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ResultsTextView" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintBottom_toTopOf="@+id/divider2" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:textSize="144sp"/>
</androidx.constraintlayout.widget.ConstraintLayout>